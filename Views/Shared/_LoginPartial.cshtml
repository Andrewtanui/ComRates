@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> SignInManager;

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Cart -->
        <li class="nav-item me-2">
            <a class="nav-link text-white position-relative" asp-controller="Cart" asp-action="MyCart" title="Shopping Cart">
                <i class="bi bi-cart3 fs-5"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger small" id="cart-count">
                    3
                </span>
            </a>
        </li>

        <!-- Wishlist -->
        <li class="nav-item me-2">
            <a class="nav-link text-white position-relative" asp-controller="Wishlist" asp-action="MyWishlist" title="Wishlist">
                <i class="bi bi-heart fs-5"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning small" id="wishlist-count">
                    2
                </span>
            </a>
        </li>

        <!-- Notifications -->
        <li class="nav-item me-2">
            <a class="nav-link text-white position-relative" asp-controller="Notifications" asp-action="Index" title="Notifications">
                <i class="bi bi-bell fs-5"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-info small" id="notification-count">
                    5
                </span>
            </a>
        </li>

        <!-- Account Dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-2 fs-5"></i>
                <span>Account</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li class="dropdown-header">
                    <strong>@User.Identity.Name</strong>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                        <i class="bi bi-person me-2"></i>Profile Settings
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Cart" asp-action="MyCart">
                        <i class="bi bi-bag-check me-2"></i>My Cart
                        <span class="badge bg-primary ms-1">2</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Wishlist" asp-action="MyWishlist">
                        <i class="bi bi-heart me-2"></i>My Wishlist
                        <span class="badge bg-warning text-dark ms-1">2</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Seller" asp-action="MyListings">
                        <i class="bi bi-shop me-2"></i>My Listings
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Settings">
                        <i class="bi bi-gear me-2"></i>Settings
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Support" asp-action="Index">
                        <i class="bi bi-question-circle me-2"></i>Help & Support
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Login
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                <i class="bi bi-person-plus me-1"></i>Register
            </a>
        </li>
    }
</ul>