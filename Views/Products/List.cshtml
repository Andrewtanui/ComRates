@model IEnumerable<TanuiApp.Models.Product>

@{
    var title = ViewBag.CategorySelected != null ? $"Category: {ViewBag.CategorySelected}" : (ViewBag.SearchQuery != null ? $"Results for '{ViewBag.SearchQuery}'" : "Products");
    ViewData["Title"] = title;
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">@title</h2>
        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">Back to Products</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No products found.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm d-flex flex-column">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="fw-bold">$@product.Price</p>
                                <div class="mb-2">
                                    @for (int i = 0; i < (int)Math.Round(product.Rating); i++)
                                    {
                                        <span>⭐</span>
                                    }
                                    @for (int i = (int)Math.Round(product.Rating); i < 5; i++)
                                    {
                                        <span>☆</span>
                                    }
                                </div>
                                <div class="mt-auto d-flex gap-2">
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="bi bi-cart-plus"></i> Add to cart
                                        </button>
                                    </form>
                                    <form asp-controller="Wishlist" asp-action="AddToWishlist" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-outline-danger" title="Add to wishlist">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>


