@model TanuiApp.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">Add New Product</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="OnSale" class="form-check-input" />
            <label asp-for="OnSale" class="form-check-label"></label>
        </div>

        <div class="mb-3">
            <label asp-for="SaleEndDate" class="form-label"></label>
            <input asp-for="SaleEndDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="SaleEndDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
