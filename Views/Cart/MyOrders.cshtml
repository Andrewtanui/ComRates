@model IEnumerable<TanuiApp.Models.Order>
@{
  ViewData["Title"] = "My Orders";
}
<div class="shop-container">
  <h2 class="mb-4">My Orders</h2>

  @if (!Model.Any())
  {
    <div class="text-center p-4">
      <img src="/images/empty-cart.svg" alt="No orders" style="max-width:360px;width:70%;height:auto" />
    </div>
  }
  }
  else
  {
    <div class="row g-4">
      @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
      {
        <div class="col-md-6">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <h6 class="mb-1">Order placed: @order.OrderDate.ToString("MMM dd, yyyy h:mm tt")</h6>
                  <div class="text-muted">Payment: @order.PaymentMethod</div>
                </div>
                <div class="text-end">
                  <div class="mb-1 fw-bold">@order.TotalAmount.ToString("C")</div>
                  <div>
                    <span class="badge-status @(order.Status?.ToLower() == "completed" ? "completed" : (order.Status?.ToLower() == "cancelled" ? "cancelled" : "pending"))">@order.Status</span>
                  </div>
                </div>
              </div>

              <div class="mt-3">
                <ul class="list-unstyled mb-0">
                  @foreach (var item in order.Items)
                  {
                    <li class="d-flex align-items-center mb-2">
                      <img src="@(item.Product?.ImageUrl ?? "/images/placeholder-product.svg")" onerror="this.onerror=null;this.src='/images/placeholder-product.svg'" style="width:64px;height:64px;object-fit:cover;border-radius:8px" alt="@(item.Product?.Name ?? "product")" />
                      <div class="ms-3">
                        <div>@(item.Product != null ? item.Product.Name : "[Deleted Product]")</div>
                        <small class="text-muted">x@item.Quantity â€¢ @(item.Price.ToString("C"))</small>
                      </div>
                      <div class="ms-auto text-muted">@(item.Price * item.Quantity).ToString("C")</div>
                    </li>
                  }
                </ul>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  }
</div>