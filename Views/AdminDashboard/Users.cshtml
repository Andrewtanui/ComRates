@model IEnumerable<TanuiApp.Models.Users>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container-fluid mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-people me-2"></i>Manage Users</h5>
            <div>
                <span class="badge bg-secondary me-2">Role: @ViewBag.Role</span>
                <span class="badge bg-info">Status: @ViewBag.Status</span>
            </div>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-modern">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Reports</th>
                                <th>Status</th>
                                <th>Joined</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model)
                            {
                                <tr>
                                    <td>@u.FullName</td>
                                    <td>@(u.Email ?? "-")</td>
                                    <td><span class="badge bg-secondary">@u.UserRole</span></td>
                                    <td><span class="badge bg-danger">@u.ReportCount</span></td>
                                    <td>
                                        @if (u.IsBanned)
                                        {
                                            <span class="badge bg-danger">Banned</span>
                                        }
                                        else if (u.IsSuspended)
                                        {
                                            <span class="badge bg-warning">Suspended</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                    <td>@u.CreatedAt.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No users found.</p>
            }
        </div>
    </div>
</div>
