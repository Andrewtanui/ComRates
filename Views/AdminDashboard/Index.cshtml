@model TanuiApp.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4 dashboard">
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-header">
                <span class="icon"><i class="bi bi-shield-check fs-4"></i></span>
                <div>
                    <h2 class="fw-bold mb-1">System Administration</h2>
                    <p class="text-muted mb-0">Manage users, monitor system activity, and oversee all operations</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics Row 1 -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Users</p>
                            <h3 class="fw-bold mb-0">@Model.TotalUsers</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Products</p>
                            <h3 class="fw-bold mb-0">@Model.TotalProducts</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-box-seam text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Orders</p>
                            <h3 class="fw-bold mb-0">@Model.TotalOrders</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cart-check text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Revenue</p>
                            <h3 class="fw-bold mb-0">KSh @Model.TotalRevenue.ToString("N0")</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-currency-dollar text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics Row 2 -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Buyers</p>
                            <h3 class="fw-bold mb-0">@Model.TotalBuyers</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-person-check text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Sellers</p>
                            <h3 class="fw-bold mb-0">@Model.TotalSellers</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-shop text-warning fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Delivery Services</p>
                            <h3 class="fw-bold mb-0">@Model.TotalDeliveryServices</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-truck text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Active Deliveries</p>
                            <h3 class="fw-bold mb-0">@Model.ActiveDeliveries</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-truck text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Moderation Metrics -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 border-start border-warning border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Suspended Accounts</p>
                            <h3 class="fw-bold mb-0 text-warning">@Model.SuspendedAccounts</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-pause-circle text-warning fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 border-start border-danger border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Banned Accounts</p>
                            <h3 class="fw-bold mb-0 text-danger">@Model.BannedAccounts</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded">
                            <i class="bi bi-x-circle text-danger fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 border-start border-danger border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Pending Reports</p>
                            <h3 class="fw-bold mb-0 text-danger">@Model.PendingReports</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded">
                            <i class="bi bi-flag text-danger fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-3 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-lightning-charge me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-action="Users" class="btn btn-outline-primary w-100">
                                <i class="bi bi-people me-2"></i>Manage Users
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Reports" class="btn btn-outline-danger w-100">
                                <i class="bi bi-flag me-2"></i>View Reports (@Model.PendingReports)
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="DeliveryServices" class="btn btn-outline-info w-100">
                                <i class="bi bi-truck me-2"></i>Delivery Services
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="bi bi-box-seam me-2"></i>View Products
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Flagged Users (5+ Reports) -->
    @if (Model.FlaggedUsers.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm border-start border-danger border-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0 text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Flagged Users (5+ Reports)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-modern">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Reports</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.FlaggedUsers)
                                    {
                                        <tr>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td><span class="badge bg-secondary">@user.UserRole</span></td>
                                            <td><span class="badge bg-danger">@user.ReportCount reports</span></td>
                                            <td>
                                                @if (user.IsBanned)
                                                {
                                                    <span class="badge bg-danger">Banned</span>
                                                }
                                                else if (user.IsSuspended)
                                                {
                                                    <span class="badge bg-warning">Suspended</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!user.IsBanned)
                                                {
                                                    <button class="btn btn-sm btn-danger ban-user" data-user-id="@user.UserId" data-user-name="@user.FullName">
                                                        <i class="bi bi-x-circle"></i> Ban
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Pending Delivery Services -->
    @if (Model.PendingDeliveryServices.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="bi bi-truck text-warning me-2"></i>Pending Delivery Service Approvals</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-modern">
                                <thead>
                                    <tr>
                                        <th>Company</th>
                                        <th>Contact</th>
                                        <th>License</th>
                                        <th>Vehicle</th>
                                        <th>Location</th>
                                        <th>Registered</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ds in Model.PendingDeliveryServices)
                                    {
                                        <tr>
                                            <td><strong>@ds.CompanyName</strong></td>
                                            <td>
                                                @ds.FullName<br>
                                                <small class="text-muted">@ds.Email</small>
                                            </td>
                                            <td>@ds.LicenseNumber</td>
                                            <td>@ds.VehicleInfo</td>
                                            <td>@ds.Town, @ds.County</td>
                                            <td>@ds.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <button class="btn btn-sm btn-success verify-delivery" data-user-id="@ds.UserId" data-company="@ds.CompanyName">
                                                    <i class="bi bi-check-circle"></i> Verify
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Reports -->
    @if (Model.RecentReports.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0"><i class="bi bi-flag text-danger me-2"></i>Recent Reports</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Reported User</th>
                                        <th>Reporter</th>
                                        <th>Reason</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Model.RecentReports.Take(5))
                                    {
                                        <tr>
                                            <td><strong>@report.ReportedUserName</strong></td>
                                            <td>@report.ReporterName</td>
                                            <td>@report.Reason</td>
                                            <td>@report.ReportedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a asp-action="Reports" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a asp-action="Reports" class="btn btn-primary">View All Reports</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Recent Users -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Recent User Registrations</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Registered</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.RecentUsers.Take(10))
                                {
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td><span class="badge bg-info">@user.UserRole</span></td>
                                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (user.IsBanned)
                                            {
                                                <span class="badge bg-danger">Banned</span>
                                            }
                                            else if (user.IsSuspended)
                                            {
                                                <span class="badge bg-warning">Suspended</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Ban user
        document.querySelectorAll('.ban-user').forEach(btn => {
            btn.addEventListener('click', async function() {
                const userId = this.getAttribute('data-user-id');
                const userName = this.getAttribute('data-user-name');
                
                const reason = prompt(`Ban ${userName}?\n\nEnter reason for ban:`);
                if (!reason) return;
                
                if (!confirm(`Permanently ban ${userName}? This action cannot be undone and the email will be blacklisted.`)) return;
                
                try {
                    const response = await fetch('@Url.Action("BanUser", "AdminDashboard")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `userId=${userId}&reason=${encodeURIComponent(reason)}&__RequestVerificationToken=${document.querySelector('input[name="__RequestVerificationToken"]').value}`
                    });
                    
                    const result = await response.json();
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.message || 'Failed to ban user');
                    }
                } catch (error) {
                    alert('Error banning user');
                }
            });
        });

        // Verify delivery service
        document.querySelectorAll('.verify-delivery').forEach(btn => {
            btn.addEventListener('click', async function() {
                const userId = this.getAttribute('data-user-id');
                const company = this.getAttribute('data-company');
                
                if (!confirm(`Verify ${company} as a delivery service?`)) return;
                
                try {
                    const response = await fetch('@Url.Action("VerifyDeliveryService", "AdminDashboard")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `userId=${userId}&__RequestVerificationToken=${document.querySelector('input[name="__RequestVerificationToken"]').value}`
                    });
                    
                    const result = await response.json();
                    if (result.success) {
                        location.reload();
                    } else {
                        alert(result.message || 'Failed to verify delivery service');
                    }
                } catch (error) {
                    alert('Error verifying delivery service');
                }
            });
        });
    </script>
    @Html.AntiForgeryToken()
}
