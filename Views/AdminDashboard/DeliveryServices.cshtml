@model IEnumerable<TanuiApp.Models.Users>
@{
    ViewData["Title"] = "Delivery Services";
}

<div class="container-fluid mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-truck me-2"></i>Delivery Services</h5>
            <a asp-action="DeliveryCompanies" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-building me-1"></i> Manage Companies
            </a>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-modern">
                        <thead>
                            <tr>
                                <th>Company</th>
                                <th>Contact</th>
                                <th>License</th>
                                <th>Vehicle</th>
                                <th>Location</th>
                                <th>Verified</th>
                                <th>Joined</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ds in Model)
                            {
                                <tr>
                                    <td><strong>@(ds.CompanyName ?? "-")</strong></td>
                                    <td>
                                        @ds.FullName<br />
                                        <small class="text-muted">@(ds.Email ?? "-")</small>
                                    </td>
                                    <td>@(string.IsNullOrWhiteSpace(ds.LicenseNumber) ? "-" : ds.LicenseNumber)</td>
                                    <td>@(string.IsNullOrWhiteSpace(ds.VehicleInfo) ? "-" : ds.VehicleInfo)</td>
                                    <td>@(string.IsNullOrWhiteSpace(ds.Town) ? "-" : ds.Town), @(string.IsNullOrWhiteSpace(ds.County) ? "-" : ds.County)</td>
                                    <td>
                                        @if (ds.IsVerified)
                                        {
                                            <span class="badge bg-success">Verified</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                    </td>
                                    <td>@ds.CreatedAt.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No delivery services found.</p>
            }
        </div>
    </div>
</div>
