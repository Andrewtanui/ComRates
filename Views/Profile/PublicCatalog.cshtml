@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "User Catalog";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">User Catalog</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No public profiles yet.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var u in Model)
            {
                var currentUserId = User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")?.Value;
                <div class="col-md-3">
                    <div class="card h-100 shadow-sm text-center p-3">
                        <img src="@(u.ProfilePictureUrl ?? "/images/products/default.svg")" class="rounded-circle mx-auto" style="width:96px;height:96px;object-fit:cover;" alt="@u.FullName" />
                        <div class="card-body d-flex flex-column align-items-center">
                            <h5 class="card-title">@u.FullName</h5>
                            <p class="text-muted mb-3">@u.Products products</p>
                            <div class="mt-auto d-flex gap-2">
                                <a class="btn btn-outline-secondary btn-sm" asp-controller="Profile" asp-action="ViewProfile" asp-route-id="@u.Id">
                                    <i class="bi bi-person"></i> View Profile
                                </a>
                                @if (User.Identity.IsAuthenticated && !string.Equals(currentUserId, (string)u.Id, StringComparison.Ordinal))
                                {
                                    <a class="btn btn-success btn-sm" asp-controller="Messages" asp-action="Chat" asp-route-withUserId="@u.Id">
                                        <i class="bi bi-chat-dots"></i> Message
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


