@model IEnumerable<TanuiApp.Models.Product>

@{
    ViewData["Title"] = "My Listings";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Listings (@ViewBag.Total)</h2>
        <a asp-controller="Products" asp-action="Create" class="btn btn-success"><i class="bi bi-plus"></i> New Listing</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no listings yet. Create your first product.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <div class="card h-100 shadow-sm position-relative">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="fw-bold mb-1">$@product.Price</p>
                                <small class="text-muted">@product.Category â€¢ @product.CreatedAt.ToShortDateString()</small>
                            </div>
                        </a>
                        <div class="d-flex justify-content-between px-2 pb-2">
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary me-2"><i class="bi bi-pencil"></i> Edit</a>
                            <form asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


