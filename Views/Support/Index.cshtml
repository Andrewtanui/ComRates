@model TanuiApp.ViewModels.SupportViewModel
@{
    ViewData["Title"] = "Support";
}

<div class="container my-5">
    <h1 class="fw-bold text-success mb-4">Support Center</h1>
    <p class="text-muted">Ask a question or explore our frequently asked questions below.</p>

    <!-- Ask AI -->
    <form asp-action="AskQuestion" method="post" class="mb-5">
        <div class="input-group">
            <input type="text" asp-for="UserQuestion" class="form-control" placeholder="Type your question..." />
            <button type="submit" class="btn btn-success">Ask</button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.Answer))
    {
        <div class="alert alert-info shadow-sm">
            <strong>Answer:</strong> @Model.Answer
        </div>
    }

    <!-- FAQ Section -->
    <h3 class="fw-bold text-success mb-3">Frequently Asked Questions</h3>
    <div class="accordion" id="faqAccordion">
        @for (int i = 0; i < Model.Faqs.Count; i++)
        {
            var faq = Model.Faqs[i];
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@i" aria-expanded="false" aria-controls="collapse-@i">
                        @faq.Question
                    </button>
                </h2>
                <div id="collapse-@i" class="accordion-collapse collapse" aria-labelledby="heading-@i" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        @faq.Answer
                    </div>
                </div>
            </div>
        }
    </div>
</div>
